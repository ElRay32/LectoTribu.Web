@page "{id}"
@model ClubEditModel
@{
    ViewData["Title"] = "Editar club";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Editar club</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <input type="hidden" asp-for="Input.Id" />
                    <div class="col-12"><label class="form-label">Nombre</label><input class="form-control" asp-for="Input.Name" /></div>
                    <div class="col-12"><label class="form-label">Descripción</label><input class="form-control" asp-for="Input.Description" /></div>
                    <div class="col-12 d-grid"><button class="btn btn-primary" type="submit">Guardar</button></div>
                </form>
            </div>
        </div>
    </div>
</div>