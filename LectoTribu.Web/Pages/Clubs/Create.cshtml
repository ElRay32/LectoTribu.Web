@page
@model CreateClubModel
@{
    ViewData["Title"] = "Nuevo club";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Nuevo club</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Nombre del club</label>
                        <input class="form-control" asp-for="Input.ClubName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nombre del dueño</label>
                        <input class="form-control" asp-for="Input.OwnerFirstName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Apellido del dueño</label>
                        <input class="form-control" asp-for="Input.OwnerLastName" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Descripción</label>
                        <input class="form-control" asp-for="Input.Description" />
                    </div>
                    <div class="col-12 d-grid">
                        <button class="btn btn-primary" type="submit">Crear</button>
                    </div>
                </form>
            </div>
            @if (Model.CreatedClubId != Guid.Empty)
            {
                <div class="card-footer bg-white">
                    <div class="alert alert-success mb-0">Club creado: <b>@Model.CreatedClubId</b>. <a class="ms-2" asp-page="/Clubs/Index">Ver listado</a></div>
                </div>
            }
        </div>
    </div>
</div>