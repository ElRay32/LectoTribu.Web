@page
@model CreateModel
@{
    ViewData["Title"] = "Crear Club";
}
<h2>Crear Club</h2>
<form method="post">
    <div>
        <label>Nombre</label>
        <input asp-for="Input.Name" />
    </div>
    <div>
        <label>Descripción</label>
        <input asp-for="Input.Description" />
    </div>
    <div>
        <label>OwnerId (GUID)</label>
        <input asp-for="Input.OwnerId" />
    </div>
    <button type="submit">Crear</button>
</form>
@if (Model.CreatedClubId != Guid.Empty)
{
    <p>Club creado: <strong>@Model.CreatedClubId</strong></p>
    <p><a asp-page="/Clubs/Schedule">Programar capítulo</a> | <a asp-page="/Clubs/Comment">Comentar capítulo</a></p>
}
