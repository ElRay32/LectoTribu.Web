@page
@model ClubsIndexModel
@{
    ViewData["Title"] = "Clubs";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Clubs</h1>
    <a class="btn btn-primary" asp-page="/Clubs/Create">Nuevo</a>
</div>
<table class="table table-hover align-middle">
    <thead>
        <tr><th>Nombre</th><th class="d-none d-md-table-cell">Descripción</th><th style="width:160px"></th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Items)
        {
            <tr>
                <td>@c.Name</td>
                <td class="d-none d-md-table-cell">@c.Description</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-page="/Clubs/Edit" asp-route-id="@c.Id">Editar</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@c.Id" class="d-inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('¿Eliminar club?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>