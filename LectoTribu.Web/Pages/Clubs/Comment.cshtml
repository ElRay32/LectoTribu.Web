@page
@model CommentModel
@{
    ViewData["Title"] = "Comentar capítulo";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Nuevo comentario</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">ClubId</label>
                        <input class="form-control" asp-for="Input.ClubId" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">BookId</label>
                        <input class="form-control" asp-for="Input.BookId" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Capítulo</label>
                        <input class="form-control" asp-for="Input.Chapter" type="number" />
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">UserId</label>
                        <input class="form-control" asp-for="Input.UserId" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Comentario</label>
                        <textarea class="form-control" asp-for="Input.Content"></textarea>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit">Publicar</button>
                    </div>
                </form>
            </div>
            @if (Model.Sent)
            {
                <div class="card-footer bg-white">
                    <div class="alert alert-success mb-0">Comentario enviado.</div>
                </div>
            }
        </div>
    </div>
</div>