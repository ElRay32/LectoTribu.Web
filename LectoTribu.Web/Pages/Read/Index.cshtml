@page
@model ReadModel
@{
    ViewData["Title"] = "Sala de lectura";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-0">@Model.ChapterTitle</h1>
        <small class="text-muted">
            Club: @Model.ClubName • Libro: @Model.BookTitle • Capítulo: @Model.Chapter
        </small>
    </div>
    <div>
        <a class="btn btn-outline-primary"
           asp-page="/Clubs/Schedule"
           asp-route-clubId="@Model.ClubId"
           asp-route-bookId="@Model.BookId"
           asp-route-chapter="@Model.Chapter">
            Programar
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- Columna izquierda: comentarios -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Comentarios</div>
            <div class="card-body">
                @if (Model.Comments?.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var c in Model.Comments)
                        {
                            <li class="list-group-item px-0">
                                <div class="d-flex justify-content-between">
                                    <strong>@c.UserName</strong>
                                    <small class="text-muted">@c.CreatedAtUtc.ToLocalTime()</small>
                                </div>
                                <div>@c.Content</div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted">Aún no hay comentarios para este capítulo.</div>
                }
            </div>
        </div>
    </div>

    <!-- Columna derecha: nuevo comentario -->
    <aside class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Nuevo comentario</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Club</label>
                        <select class="form-select" asp-for="Input.SelectedClubId">
                            @foreach (var c in Model.Clubs)
                            {
                                <option value="@c.Id" selected="@(Model.Input.SelectedClubId == c.Id.ToString() ? "selected" : null)">
                                    @c.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Libro</label>
                        <select class="form-select" asp-for="Input.SelectedBookId">
                            @foreach (var b in Model.Books)
                            {
                                <option value="@b.Id" selected="@(Model.Input.SelectedBookId == b.Id.ToString() ? "selected" : null)">
                                    @b.Title
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Capítulo</label>
                        <input class="form-control" asp-for="Input.Chapter" type="number" min="1" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Tu nombre</label>
                        <input class="form-control" asp-for="Input.UserName" placeholder="Ej: Juan Pérez" />
                    </div>

                    <div class="col-12">
                        <label class="form-label">Comentario</label>
                        <textarea class="form-control" asp-for="Input.Content" rows="4" placeholder="Escribe tu comentario..."></textarea>
                    </div>

                    <div class="col-12 d-grid">
                        <button class="btn btn-primary" type="submit">Publicar</button>
                    </div>
                </form>
            </div>
        </div>
    </aside>
</div>

