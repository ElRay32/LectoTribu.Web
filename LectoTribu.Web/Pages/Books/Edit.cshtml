@page "{id}"
@model BookEditModel
@{
    ViewData["Title"] = "Editar libro";
}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white fw-semibold">Editar libro</div>
            <div class="card-body">
                <form method="post" class="row g-3">
                    <input type="hidden" asp-for="Input.Id" />
                    <div class="col-12"><label class="form-label">Título</label><input class="form-control" asp-for="Input.Title" /></div>
                    <div class="col-md-6"><label class="form-label">Autor</label><input class="form-control" asp-for="Input.AuthorName" /></div>
                    <div class="col-md-6"><label class="form-label">Capítulos</label><input class="form-control" asp-for="Input.TotalChapters" type="number" /></div>
                    <div class="col-12 d-grid"><button class="btn btn-primary" type="submit">Guardar</button></div>
                </form>
            </div>
        </div>
    </div>
</div>
